<!--pages/user/applyToMember/applyToMember.wxml-->
<view class="page-body">
  <form  bindsubmit='onSubmit'>
    <view class="page-section">
    <view class="weui-cells__title">申请人姓名</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" type="text" placeholder="请输入姓名" name="name" focus="true"  value="{{forminput}}"/>
      </view>
    </view>
    </view>
    <view class="page-section">
      <view class="weui-cells__title">申请理由</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input" type="text" placeholder="请输入报销事项" name="message"  value="{{forminput}}"/>
        </view>
      </view>
    </view>
    <view class="page-section">
    <view class="weui-cells__title">报销金额</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" type="number" placeholder="请输入报销金额(RMB)" name="money" focus="true" value="{{forminput}}"/>
      </view>
    </view>
    </view>
    <view class='button'>
      <button type='primary' form-type='submit'>提交</button>
    </view>
  </form>
</view>